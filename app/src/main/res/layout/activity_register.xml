<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/registerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:text="Sign Up"
        android:textColor="@color/darkorange"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@id/registerTV"
        android:text="Username :"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/usernameTB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="155dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/registerTV"
        android:background="@drawable/corner"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_action_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/username"
        android:text="Email :"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/emailTB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="155dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/usernameTB"
        android:background="@drawable/corner"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_action_email"/>

    <EditText
        android:id="@+id/passwordTB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="155dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/emailTB"
        android:background="@drawable/corner"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_action_lock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:text="Password :"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:layout_below="@id/passwordTB"
        android:background="@drawable/button_login"
        android:textSize="16dp"/>

</RelativeLayout>